{
	"name": "docs",
	"$schema": "../../node_modules/nx/schemas/project-schema.json",
	"projectType": "application",
	"prefix": "app",
	"sourceRoot": "apps/docs/src",
	"tags": [],
	"targets": {
		"build": {
			"executor": "@angular/build:application",
			"outputs": ["{options.outputPath}"],
			"options": {
				"outputPath": {
                    "base": "docs",
                    "browser": ""
                },
				"browser": "apps/docs/src/main.ts",
				"polyfills": ["zone.js"],
				"tsConfig": "apps/docs/tsconfig.app.json",
				"inlineStyleLanguage": "scss",
				"assets": [
					{
						"glob": "**/*",
						"input": "apps/docs/public"
					}
				],
				"styles": [
					"apps/docs/src/styles/globals.scss",
					"apps/docs/src/styles/prism-js-theme.css",
					"libs/frakton-ng/assets/styles/styles.css",
					"libs/frakton-ng/assets/styles/themes/light.css",
					"libs/frakton-ng/assets/styles/themes/dark.css"
				],
				"scripts": [
					"node_modules/prismjs/prism.js",
					"node_modules/clipboard/dist/clipboard.min.js",
					"node_modules/prismjs/components/prism-bash.min.js",
					"node_modules/prismjs/components/prism-json.min.js",
					"node_modules/prismjs/components/prism-css.min.js",
					"node_modules/prismjs/components/prism-typescript.min.js"
				]
			},
			"configurations": {
				"production": {
					"budgets": [
						{
							"type": "initial",
							"maximumWarning": "2mb",
							"maximumError": "5mb"
						},
						{
							"type": "anyComponentStyle",
							"maximumWarning": "20kb",
							"maximumError": "50kb"
						}
					],
					"outputHashing": "all"
				},
				"development": {
					"optimization": false,
					"extractLicenses": false,
					"sourceMap": true
				}
			},
			"defaultConfiguration": "production"
		},
		"serve": {
			"continuous": true,
			"executor": "@angular/build:dev-server",
			"configurations": {
				"production": {
					"buildTarget": "docs:build:production"
				},
				"development": {
					"buildTarget": "docs:build:development"
				}
			},
			"defaultConfiguration": "development"
		},
		"extract-i18n": {
			"executor": "@angular/build:extract-i18n",
			"options": {
				"buildTarget": "docs:build"
			}
		},
		"lint": {
			"executor": "@nx/eslint:lint"
		},
		"test": {
			"executor": "@nx/jest:jest",
			"outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
			"options": {
				"jestConfig": "apps/docs/jest.config.ts",
				"tsConfig": "apps/docs/tsconfig.spec.json"
			}
		},
		"serve-static": {
			"continuous": true,
			"executor": "@nx/web:file-server",
			"options": {
				"buildTarget": "docs:build",
				"port": 4200,
				"staticFilePath": "dist/apps/docs/browser",
				"spa": true
			}
		}
	}
}
