{
  "name": "frakton-ng",
  "version": "1.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "pnpm --filter frakton-ng build",
    "publish:major": "pnpm --filter frakton-ng publish:major",
    "publish:minor": "pnpm --filter frakton-ng publish:minor",
    "publish:patch": "pnpm --filter frakton-ng publish:patch",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "storybook": "ng run frakton-ng:storybook",
    "storybook:build": "ng run frakton-ng:build-storybook",
    "dev": "ng run core:storybook"
  },
  "prettier": {
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^21.0.0-next.3",
    "@angular/compiler": "^21.0.0-next.3",
    "@angular/core": "^21.0.0-next.3",
    "@angular/forms": "^21.0.0-next.3",
    "@angular/platform-browser": "^21.0.0-next.3",
    "@angular/router": "^21.0.0-next.3",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "^21.0.0-next.3",
    "@angular/cli": "^21.0.0-next.3",
    "@angular/compiler-cli": "^21.0.0-next.3",
    "@storybook/addon-docs": "9.1.1",
    "@storybook/addon-styling-webpack": "^2.0.0",
    "@storybook/angular": "9.1.1",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^24.2.0",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.0",
    "css-loader": "^7.1.2",
    "jasmine-core": "~5.8.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ng-packagr": "^21.0.0-next.0",
    "postcss": "^8.5.6",
    "postcss-loader": "^8.1.1",
    "raw-loader": "^4.0.2",
    "sass": "^1.90.0",
    "sass-loader": "^16.0.5",
    "storybook": "9.1.1",
    "style-loader": "^4.0.0",
    "typescript": "~5.9.2",
    "zone.js": "^0.15.1"
  }
}
